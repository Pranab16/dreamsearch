<div id="home_page">
    <h2 class="section_title">
        Search for Dreams
    </h2>
    <div id="search_box">
        <%= form_tag(search_index_path, method: :get) do %>
            <%= text_field_tag("search", params[:search], :placeholder => 'Enter category or product', :class => "search_input", :autocomplete => "off") %>
            <%= button_tag("Search", :alt=>"Search", :class=>"search_submit") %>
        <% end %>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function(){
        init_search_box('<%= dropdown_search_index_path %>');
    });
</script>
